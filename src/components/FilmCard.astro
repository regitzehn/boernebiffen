---
interface Props {
  imageSrc: string;
  imageAlt?: string;
  title: string;
  subtitle?: string;
  duration?: string;
  href: string;
  variant?: "blue" | "lime";
  borderVariant?: "blue" | "lime";
}

const {
  imageSrc,
  imageAlt = "",
  title,
  subtitle,
  duration = "10 min",
  href,
  variant = "blue",
  borderVariant = "blue",
} = Astro.props as Props;

const bgClass = variant === "lime" ? "bg-lime-200" : "bg-blue-100";
const borderClass = borderVariant === "lime" ? "border-lime-100" : "border-coolblue-200";
---

<article class={`card ${bgClass} shadow-sm rounded-card w-[272px] flex-none`}>
  <!-- FIGURE / IMAGE -->
  <a href={href} class="relative block pt-4 px-4">
    <img
      src={imageSrc}
      alt={imageAlt}
      class={`w-full h-40 md:h-48 rounded-card object-cover border-4 ${borderClass}`}
    />

    <!-- PLAY BUTTON -->
    <div class="absolute bottom-4 right-7 z-10">
      <div class="relative w-16 h-16">
        <div class="absolute inset-0 rounded-full bg-pink-100"></div>
        <img
          src="/play.svg"
          alt="Play"
          class="absolute inset-0 w-10 h-10 m-auto pl-2"
        />
      </div>
    </div>
  </a>

  <!-- BODY -->
  <div class="card-body items-start text-left px-4 pb-4 pt-3 gap-1">
    <h3 class="card-title text-h-card leading-tight">
      {title}
    </h3>

    {subtitle && <p class="text-p-card">{subtitle}</p>}

    <div class="mt-2 flex items-center gap-2 text-base text-neutral-900">
      <img src="/tid.svg" alt="" class="w-5 h-5" />
      <span>{duration}</span>
    </div>
  </div>
</article>
