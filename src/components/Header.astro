---
interface HeaderIcon {
  href: string;
  label: string; // for aria-label
  icon: string;
}

const icons: HeaderIcon[] = [
  { href: "/profil", label: "Min profil", icon: "/avatar-icon.svg" },
  { href: "/favoritter", label: "Favoritter", icon: "/heart-icon.svg" },
  { href: "/soeg", label: "Søg", icon: "/soog-icon.svg" },
  { href: "/downloads", label: "Downloads", icon: "/download-icon.svg" },
];
---

<header class="bg-neutral-50">
  <div class="max-w-6xl mx-auto px-4 md:px-10 py-4 md:py-6 flex items-center justify-between gap-4">
    <!-- LOGO -->
    <a href="/" class="inline-flex items-start gap-2">
      <img
        src="/logo-bornebiffen.svg"
        alt="Børnebiffen - Se kortfilm med de yngste"
        class="h-10 md:h-14 w-auto"
      />
    </a>

    <!-- ICON NAV -->
    <nav class="flex items-center gap-3 md:gap-4" aria-label="Primær navigation">
      {icons.map((item) => (
        <a href={item.href} aria-label={item.label} class="icon-circle">
          <img src={item.icon} alt="" class="w-6 h-6 md:w-9 md:h-9" />
        </a>
      ))}
    </nav>
  </div>
</header>
