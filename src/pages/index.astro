---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Forside" hideHeader={true} noMargin={true}>
  <article
    class="bg-lime-200 relative overflow-hidden px-4 md:px-10 grid grid-cols-1 auto-rows-auto md:grid-cols-10 md:grid-rows-7"
  >
    <!-- LOGO + BUTTONS COLUMN -->
    <div
      class="mt-6 z-30 md:mt-0 md:col-start-2 md:col-span-3 md:row-start-1 md:row-span-3 md:self-end @container"
    >
      <!-- LOGO -->
      <img
        src="/logo-bornebiffen.svg"
        alt="BÃ¸rnebiffen"
        class="w-3/4 max-w-[260px] @md:w-full @md:max-w-[280px]"
      />

      <!-- BUTTONS -->
      <div class="mt-4 @md:mt-6">
        <div class="inline-grid grid-cols-[auto_auto] items-center">
          <Button
            type="double"
            primaryLabel="Logind"
            primaryHref="/ListView"
            secondaryLabel="Opret"
            secondaryHref="/ListView"
          />
        </div>
      </div>
    </div>

    <!-- BIG BLUE/PURPLE LOTTIE -->
    <div
      class="mt-8 flex justify-center items-end z-10 md:mt-0 md:col-start-6 md:col-span-5 md:row-start-2 md:row-span-7 md:justify-end"
    >
      <lottie-player
        src="/heroguypurple.json"
        background="transparent"
        speed="1"
        autoplay
        loop
        class="w-full max-w-[360px] sm:max-w-[440px] md:max-w-[750px] lg:max-w-[900px]"
      ></lottie-player>
    </div>

    <!-- SMALL PINK LOTTIE -->
    <div
      class="hidden md:flex md:items-end md:z-30 md:col-start-5 md:col-span-2 md:row-start-5 md:row-span-3"
    >
      <lottie-player
        src="/heroguypink.json"
        background="transparent"
        speed="1"
        autoplay
        loop
        class="w-[220%] max-w-none h-auto"
      ></lottie-player>
    </div>
  </article>
</MainLayout>

<script
  src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"
  is:inline
></script>
